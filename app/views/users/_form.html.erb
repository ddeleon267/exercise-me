<%= form_for @user do |f| %>
  <%= render partial: "layouts/errors", locals: { object: @user } %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.label :password_confirmation unless logged_in? %>
    <%= f.password_field :password_confirmation unless logged_in? %>
    <br>
    <br>
    <%= f.submit %>
<% end %>
