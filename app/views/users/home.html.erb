<% if @user %>
  <h1>Welcome, <%= @user.name %></h1>
<% end %>

<h3>Recently Added Workouts From the Community</h3>
<% unless @workouts.empty? %>
  <% @workouts.each do |workout| %>
    <% user = (@current_user.id == workout.user_id) ? "you" : workout.user_name %>
      <ul><%= link_to workout.name, workout_path(workout) %>
        <li>Added by <%= link_to workout.user_name, user_path(workout.user) %></li>
      </ul>
  <% end %>
<% end %>

<h3>Recently Added Exercises</h3>
<% unless @exercises.empty? %>
  <ul>
    <% @exercises.each do |exercise| %>
      <li><%= link_to exercise.name, exercise_path(exercise) %></li>
    <% end %>
  </ul>
<% end %>

<h3>Explore New Users!</h3>
<% unless @users.empty? %>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.name, user_path(user) %></a></li>
    <% end %>
  </ul>
<% end %>
