<h3>Edit This Workout</h3>

<%= form_for(@workout) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being edited:
      </h2>

      <ul>
      <% @workout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <ul><%= f.label :exercises %>
  <%= f.collection_check_boxes :exercise_ids, Exercise.all, :id, :name %>
  </ul>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <br>
  <%= f.label "Notes:" %>
  <%= f.text_area :notes %>
  <br>
  <br>
  <%= f.label "Date:" %>
  <%= f.text_field :date %>
  <br>

  <%= f.submit %>
<% end %>
