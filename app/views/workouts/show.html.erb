<h1><%= @workout.name %></h1>
<p> Added by: <%= link_to @workout.user.name, user_path(@workout.user) if @workout.user %></p>
<p><%= last_updated @workout %></p>
<p> Workout Description: <%= @workout.description %></p>
<p> Notes: <%= @workout.notes %></p>
<p> Date: <%= @workout.date %></p>
<p> Exercises: </p>
  <% @workout.exercises.each do |exercise| %>
    <%= exercise.name %>
  <% end %>

<% if @workout.user == current_user %>
  <p><%= link_to "Edit This Workout", edit_user_workout_path(@workout.user, @workout) %><p>
  <p><%= link_to "Delete This Workout", user_workout_path(current_user, @workout), method: :delete, data: {confirm: "Are you sure you want to delete this workout?"} %></p>
<% end %>
