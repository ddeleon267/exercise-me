<h1>Workout: <%= @workout.name %></h1>

<%= link_to "Edit This Workout", edit_user_workout_path(@workout.user, @workout) %> | <%= link_to "Delete This Workout", user_workout_path(current_user, @workout), method: :delete, data: {confirm: "Are you sure you want to delete this workout?"} if @workout.user == current_user %>

<p> Added by: <%= link_to @workout.user.name, user_path(@workout.user) if @workout.user %></p>
<p><%= last_updated @workout %></p>
<p> Workout Description: <%= @workout.description %></p>
<p> Notes: <%= @workout.notes %></p>
<p> Date: <%= @workout.date %></p>
<p> Exercises:</p>

<% @workout.workout_exercises.each do |workout_exercise| %>
  <ul><%= workout_exercise.exercise.name %>
    <li>Sets: <%= workout_exercise.sets %></li>
    <li>Reps: <%= workout_exercise.reps %></li>
  </ul>
<% end %>
