<%= form_for(@exercise) do |f| %>
  <%= render partial: "layouts/errors", locals: { object: @exercise } %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :muscle_group %>
  <%= f.select "muscle_group", options_for_select(["glutes", "abdominals", "chest", "quadriceps", "hamstrings", "calves", "back", "shoulders", "biceps", "triceps"]) %>

  <%= f.label :equipment %>
  <%= f.text_field :equipment %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.submit %>
<% end %>
